{
  "name": "Real-time News Insight",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "crawler_service",   
  "workspaceFolder": "/workspace/real-time-news-insight",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace/real-time-news-insight,type=bind"
  ],
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "pip install -r crawler_service/requirements.txt"
}
